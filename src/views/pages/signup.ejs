        <!--sign up form-->

        <div class="d-flex justify-content-center"> <!--flex centering -->
            <div class="formlayout w-50 h-25 p-4 m-5">
                <div class="h3 text-white mb-5 text-center"><strong class="fw-bold">Sign Up</strong> to unleash the
                    gamer within
                    you!</div>
                <!--grid-->
                <form class="row g-3" action="" method="get" onsubmit="return validate(this)">
                   
                    <!-- <div class="col-12">
                        <label for="name" class="form-label text-white">First Name<span class="asteric">*</span></label>
