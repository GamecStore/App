  <body class="bg-black">

    <!-- Header -->
    <header class="p-3 menu-fixed bg">
      <%- include ('../partials/header.ejs') %>
    </header>
    <!------------>


    <!--body-->
    <h2 class="text-white text-center mt-3 mb-4">Purchase History</h2>
    <table class="table table-bordered table-dark table-striped text-center mt-3 mb-3 tbl">
      <thead class="tablehead">
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Game</th>
          <th scope="col">Price</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach((order)=> { %>
        <tr class="trr">
          <td><%= order.date.toDateString()%></td>
          <td><%= order.games.map(game => game.name).join('\n ') %></td>
          <td><%= order.totalPrice%></td>
          <td>Paid</td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <!--footer-->
    <footer class="footer bg ">
      <%- include('../partials/footer') %>
    </footer>
